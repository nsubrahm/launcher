# Common Cluster ID
CLUSTER_ID=MkU3OEVBNTcwNTJENDM2Qk

# Node Configuration
KAFKA_NODE_ID=1
KAFKA_PROCESS_ROLES=broker,controller

# Listeners and Advertised Listeners
KAFKA_LISTENERS=PLAINTEXT://0.0.0.0:29092,CONTROLLER://0.0.0.0:29093,PLAINTEXT_HOST://0.0.0.0:9092
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://broker:29092,PLAINTEXT_HOST://localhost:9092

# Controller & Broker Configs
KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT
KAFKA_CONTROLLER_LISTENER_NAMES=CONTROLLER
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
KAFKA_CONTROLLER_QUORUM_VOTERS=1@broker:29093

# Log and Replication Settings
KAFKA_LOG_DIRS=/var/lib/kafka/data
KAFKA_LOG_RETENTION_HOURS=24                     # Keep log retention low
KAFKA_LOG_SEGMENT_BYTES=268435456                # Reduce to 256MB for faster log rolling
KAFKA_LOG_CLEANUP_POLICY=delete
KAFKA_LOG_FLUSH_INTERVAL_MESSAGES=100000         # Reduce to fit memory constraints
KAFKA_LOG_FLUSH_INTERVAL_MS=5000

# Replication and Durability
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1
KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1
KAFKA_UNCLEAN_LEADER_ELECTION_ENABLE=false
KAFKA_MIN_INSYNC_REPLICAS=1
KAFKA_DEFAULT_REPLICATION_FACTOR=1
KAFKA_REPLICA_LAG_TIME_MAX_MS=30000

# Performance Optimization
KAFKA_HEAP_OPTS="-Xms1.5G -Xmx1.5G"              # Reduce heap from 4G to 1.5G due to limited RAM
KAFKA_JVM_PERFORMANCE_OPTS="-XX:+UseG1GC -XX:InitiatingHeapOccupancyPercent=35 -XX:+ExplicitGCInvokesConcurrent"
KAFKA_NUM_NETWORK_THREADS=8                      # Reduce from 16 to 8
KAFKA_NUM_IO_THREADS=16                          # Reduce from 32 to 16
KAFKA_SOCKET_REQUEST_MAX_BYTES=104857600         # Keep at 100MB
KAFKA_MESSAGE_MAX_BYTES=10485760
KAFKA_REPLICA_FETCH_MAX_BYTES=10485760

# Consumer Group Rebalancing
KAFKA_GROUP_MIN_SESSION_TIMEOUT_MS=3000
KAFKA_GROUP_MAX_SESSION_TIMEOUT_MS=300000
KAFKA_GROUP_INITIAL_REBALANCE_DELAY_MS=1000      # Faster consumer startup

# Controller Election Stability
KAFKA_KRAFT_BROKER_REGISTRATION_BACKOFF_MS=500
KAFKA_KRAFT_BROKER_HEARTBEAT_INTERVAL_MS=500
KAFKA_KRAFT_CONTROLLER_QUORUM_VOTE_TIMEOUT_MS=10000
KAFKA_KRAFT_CONTROLLER_QUORUM_ELECTION_TIMEOUT_MS=20000
